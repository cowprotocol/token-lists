{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true,
    "logError": true,
    "pretty": true
  }
}